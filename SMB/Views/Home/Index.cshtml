@{
    ViewBag.Title = "Home Page";
}

@Styles.Render("~/Content/HomeStyle.css")

<h3>@DateTime.Now</h3>
@if (!ViewBag.HasCookie)
{
    <div>
        <p>
            Если вы администратор, то вы можете авторизироваться здесь.
            Администратор может редактировать ссылки.
        </p>
    </div>
<form method="post", action="~/Home/Autorisation">
    <table>
        <tr>
            <td>
                <p>Логин</p>
                <input class="simpleTextInput" type="text" name="login" />
            </td>
        </tr>
        <tr>
            <td>
                <p>Пароль</p>
                <input class="simpleTextInput" type="password" name="password" />
            </td>
        </tr>
        <tr>
            <td>
                <input class="redButton" type="submit" value="Войти" />
            </td>
        </tr>
    </table>
</form>
}
else
{
    <p>Вы авторизированы</p>
}